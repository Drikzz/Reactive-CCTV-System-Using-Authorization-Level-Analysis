  "num_epochs": 50,
  "early_stop_patience": 5,
  "enable_cache": true,
  "pre_cache_before_training": true,
  "show_video_conversion_progress": true,
  "cache_format": "pt",
  "aug_flip_p": 0.5,
  "aug_crop_scale": [
    0.8,
    1.0
  ],
  "aug_crop_ratio": [
    0.9,
    1.1
  ],
  "aug_brightness": [
    0.8,
    1.2
  ],
  "aug_contrast": [
    0.8,
    1.2
  ],
  "use_optuna": false,
  "optuna_trials": 10
