{
  "root_dir": "datasets/behavior_clips",
  "cache_root": "datasets/cache/LSTM_MN",
  "sequence_length": 32,
  "img_size": 224,
  "frame_sampling": "uniform",
  "train_split": 0.8,
  "val_split": 0.2,
  "random_seed": 42,
